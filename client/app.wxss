.pick_datetime picker-view {
  font-size: 34rpx;
}

.pick_datetime_column {
  height: 40px;
  line-height: 40px;
  text-align: center;
}

.add {
  background-color: #fff;
  position: fixed;
  width: 90%;
  bottom: 2px;
  border: 0 solid #fff;
  border-radius: 500px;
}
