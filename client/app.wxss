/**app.wxss**/

.pick_datetime {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  overflow: hidden;
  background: #eee;
  z-index: 3;
}

.pick_datetime_tool {
  display: flex;
  justify-content: space-between;
  height: 92rpx;
  overflow: hidden;
  line-height: 92rpx;
  /* border-top: 4rpx solid #efe; */
  border-bottom: 4rpx solid #aaa;
  padding: 0 20rpx;
  z-index: 2;
  background: #eee;
}

