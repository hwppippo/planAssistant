.nearCard-fl {
  width: 30%;
  float: left;
}

.nearCard-fl image {
  width: 150rpx;
  height: 150rpx;
  padding: 8% 15%;
}

.nearCard-fm {
  line-height: 50rpx;
  width: 60%;
  font-size: 26rpx;
  color: #999;
  margin-left: 5%;
  margin-top: 15rpx;
}

.nearCard-fr text {
  font-size: 27rpx;
}

.section_book {
    width:120rpx;
    height:80rpx;
    font-size:26rpx;
    border-radius:100%;
    line-height: 80rpx;
    color:#000;
    text-align: center;
    margin-top:50rpx;
    margin-right:20rpx;
}
.red{
  background:#B03060;
  color:#fff;
}
  
.blue{
  background:#79CDCD;
  color:#000;
}  

.down {
  width: 95%;
  background-color: #efefef;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20rpx;
}

.down view {
  font-size: 26rpx;
  color: #999;
  line-height: 50rpx;
}

.feedBack {
  text-align: center;
  background-color: #eecfbd;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10rpx;
  padding: 5rpx 0;
  margin: 10rpx 0 0 0;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin-bottom: 50px;
}

/*图片大小自适应*/

image {
  width: 100%;
  height: 100%;
  display: block;
}

page {
  min-height: 100%;
  background-color: #e4e4e4;
}

/*清除浮动样式*/

.clearfix {
  zoom: 1;
  clear: both;
}

.clearfix:after {
  display: block;
  height: 0;
  overflow: hidden;
  content: " ";
  visibility: hidden;
  clear: both;
}

.ml30 {
  margin-left: 30rpx;
}

.b-shadow {
  box-shadow: 10rpx 10rpx 20rpx #999;
}

.hidden {
  display: none;
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  width: 100%;
  overflow: hidden;
}

.card {
  width: 95%;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
  flex-direction: row;
  display: flex;
  border-bottom: 2rpx solid #ddd;
}

.plan-add {
	position: fixed;
	bottom: 0;
	width: 95%;
  border-bottom: 25rpx
}
