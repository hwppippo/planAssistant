<import src="../libs/dist/dialog/index.wxml" />
<form bindsubmit="formSubmit" report-submit>

  <view class='container'>
    <!-- 订单列表 -->
    <block wx:for-items="{{carInfoData}}">
      <view class='card  b-shadow'>
        <template is="zan-dialog" data="{{ zanDialog }}"></template>


        <view class='nearCard-fl' bindtap='toggleBtn' id="{{item.id}}">
          <image src='../../imgs/car.png'></image>
        </view>

        <view class='nearCard-fm' bindtap='toggleBtn' id="{{item.id}}">
          <view>日期：
            <text class='c-green'>{{item.startTime}}</text>
          </view>
          <view>车型：
            <text class='c-green'>{{item.carNum}}</text>
          </view>
          <view>目的地：
            <text class='c-green'>{{item.destPlace}}</text>
          </view>
        </view>

        <view data-aid="{{item.id}}" data-openid="{{item.open_id}}" data-state="{{item.isStop}}" catchtap='test'>

          <button class=' section_book item_isStop?"red":"blue"' formType="submit">{{item.isStop}}</button>
        </view>

      </view>

      <view class='down clearfix {{uhide==item.id?"":"hidden"}}'>
        <view class='ml30'>预约人：{{item.user}}</view>
        <view class='ml30'>出车时间：{{item.startTime}}</view>
        <view class='ml30'>结束时间：{{item.realEndTime}}</view>
        <view class='ml30'>起始地点：{{item.location}}</view>
        <view class='feedBack'>详情</view>
      </view>
    </block>

    <view class="add">
      <button class="zan-btn zan-btn--primary" bindtap="newPlan">预约用车</button>
    </view>

  </view>
</form>