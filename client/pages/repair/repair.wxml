<scroll-view class="page_list" scroll-y="true" bindscrolltolower="loadMore">
  <view class='container'>
    <!-- 订单列表 -->
    <block wx:for-items="{{carInfoData}}">
      <view class='card  b-shadow'>

        <view class='nearCard-fl' bindtap='toggleBtn' id="{{item.id}}">
          <!-- <image src='../../imgs/car.png'></image> -->
          <image src="{{item.flagIcon}}"></image>
        </view>

        <view class='nearCard-fm' bindtap='toggleBtn' id="{{item.id}}" bindlongtap="longTap" bindtouchstart="touchStart" bindtouchend="touchEnd">
          <view>时间：
            <text class='c-green'>{{item.repairTime}}</text>
          </view>
          <view>车型：
            <text class='c-green'>{{item.carNum}}</text>
          </view>
          <view>类型：
            <text class='c-green'>{{item.repairType}}</text>
          </view>
        </view>

        <view class="section_book {{item.invoice==''?'hidden':''}}">
          <!-- <image bindtap="previewImage" src="../../imgs/invoice_2.png" data-src="{{item.invoice}}"></image> -->
          <image bindtap="previewImage" src="{{item.invoice}}" data-src="{{item.invoice}}"></image>
        </view>
      </view>

      <view class='down clearfix {{uhide==item.id?"":"hidden"}}'>
        <!-- <view class='ml30'>维修时长：{{item.time_consuming}}</view> -->
        <view class='ml30'>费用：{{item.repairCost}}</view>
        <view class='ml30 {{item.deduct==0?"hidden":""}}'>扣分：{{item.deduct}}</view>
        <view class='ml30'>缴费地点：{{item.repairLocation}}</view>
        <view class='feedBack'>详情</view>
      </view>
    </block>


    <view class="add">
      <button class="zan-btn zan-btn--primary" bindtap="newRepair">新缴费</button>
    </view>
  </view>


  <view class="tips">
    <view wx:if="{{hasMore}}">
      <image src="../../imgs/loading.gif" mode="aspectFill" />
      <text>玩了命的加载中...</text>
    </view>
  </view>
</scroll-view>
<loading hidden="{{loading}}"> 加载中...</loading>